{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
  "typeRoots": ["./node_modules/@types", "./@types"],
    "target": "ES2020",
    "module": "ES2020", 
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
  ,
  "exclude": [
    "node_modules",
    "dist" // why? because we don't want to include the output directory in our source files
  ]
}
